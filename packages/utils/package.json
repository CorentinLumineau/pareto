{
  "name": "@pareto/utils",
  "version": "0.0.0",
  "private": true,
  "description": "Shared utilities for Pareto Comparator",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@pareto/types": "workspace:*",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@pareto/typescript-config": "workspace:*",
    "@vitest/coverage-v8": "^4.0.14",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.14"
  }
}
